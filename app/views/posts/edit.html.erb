<style>
    .write-form{
        padding : 40pt;
    }
</style>

<body>
    <div class="write-form">
        <form action="/posts/update/<%= @post.id %>" method="post">
            <div class="form-group">
            <label for="exampleInputEmail1">작성자</label>
            <input type="email" class="form-control" name="userId" id="userId" value="<%= @post.userName %>">
            </div>
            
            <div class="form-group">
            <label for="exampleInputPassword1">제목</label>
            <input type="text" class="form-control" name="title" id="title" value="<%= @post.title %>">
            </div>
            
            <div class ="form-group">
            <label for="exampleInputPassword1">내용</label>
            <textarea class = "form-control" name="content" rows="3"><%= @post.content %></textarea> 
            </div>
            <input type="file" name="pic" accept="image/*">
            <center><button type="submit" class="btn btn-default">수정하기</button></center>
        </form>
    </div>
</body>